<h1>Your Blog</h1>
<section class="card">
  <h2 class="page-title">Create New Post</h2>
  <form class="form update-post-form">
    <div class="form-group">
      <label for="update-post-name">Title</label>
      <input class="form-input" type="text" id="name" value="{{blogpost.name}}" />
    </div>
    <div class="form-group">
      <label for="update-post-description">Content</label>
      <input class="form-input" type="test" id="description" value="{{blogpost.description}}" />
    </div>
    <div class="form-group">
      <button class="btn" id="update-post" type="submit">Update</button>
    </div>
    <div class="form-group">
      <button class="btn" id="delete-post" type="submit">Delete</button>
    </div>
  </form>
</section>
<div>
  <button href="/newpost">+ New Post</button>
</div>

<script src="./js/blogpost.js"></script>